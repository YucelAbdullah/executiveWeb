@model executiveWeb.Models.ContactUsViewModel

@{
    ViewData["Title"] = "Bize Ulaşın";
}
<h1>@ViewData["Title"]</h1>

@if (TempData["messageSend"] != null)
{
    <div class="alert alert-success">
        <h2>Teşekkürler</h2>
        <p>Mesajınız tarafımıza ulaşmıştır...</p>
    </div>
}

<br />

<form method="post">

    <div class="card mb-3">
        <div class="card-body">

            <div class="form-group">

                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">

                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">

                <label class="form-label" asp-for="PhoneNumber"></label>
                <input class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="form-group">

                <label class="form-label" asp-for="Message"></label>
                <textarea class="form-control" asp-for="Message"></textarea>
                <span asp-validation-for="Message"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-send"></i>GÖNDER
            </button>
        </div>
    </div>


</form>

<div class="container">

    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d24063.742141594947!2d29.0101555!3d41.06969719999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1667510410119!5m2!1str!2str" width="1200" height="450" style="border:1px;" allowfullscreen="true" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

